{
  "name": "hellomyfriendo-api",
  "version": "0.0.0",
  "description": "Hello, My Friendo! - API",
  "private": true,
  "engines": {
    "node": "20"
  },
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "files": [
    "build/src"
  ],
  "license": "SEE LICENSE IN LICENSE",
  "keywords": [],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "dev": "ts-node-dev -r dotenv/config src/index.ts",
    "start": "node build/src/index.js",
    "up:postgres": "docker compose up postgres --wait --detach",
    "up:postgres:clean": "npm run down && rm -rf postgres-data && npm run up:postgres",
    "down": "docker compose down",
    "knex:migrate:make": "node scripts/knex-migrate-make",
    "knex:migrate:latest": "knex migrate:latest",
    "knex:migrate:rollback": "knex migrate:rollback",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run lint"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.11",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.11",
    "@types/pg": "^8.11.6",
    "dotenv": "^16.4.5",
    "gts": "^5.3.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "~5.4.3"
  },
  "dependencies": {
    "@google-cloud/language": "^6.3.0",
    "@google-cloud/logging-bunyan": "^5.1.0",
    "@googlemaps/google-maps-services-js": "^3.4.0",
    "bunyan": "^1.8.15",
    "celebrate": "^15.0.3",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "firebase-admin": "^12.1.0",
    "google-auth-library": "^9.9.0",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "knex": "^3.1.0",
    "knex-stringcase": "^1.4.6",
    "pg": "^8.11.5"
  }
}
